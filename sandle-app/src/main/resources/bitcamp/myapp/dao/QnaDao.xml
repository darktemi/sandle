<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.QnaDao">

  <resultMap type="qna" id="qnaMap">
	    <id column="qna_id" property="no"/>
	    <result column="member_id" property="memberNo"/>
	    <result column="title" property="title"/>
	    <result column="response" property="response"/>
	    <result column="created_date" property="createdDate"/>
    
    <association property="memberNo" javaType="member">
      <id column="member_id" property="memberNo"/>
      <result column="name" property="name"/>
    </association>
  </resultMap>
  
  

  <insert id="insert" parameterType="qna" 
          useGeneratedKeys="true" keyProperty="no" keyColumn="qna_id">
    insert into hms_qna(title, response)
    values(#{title}, #{response})
  </insert>

  <select id="findAll" resultMap="qnaMap">
    select 
      qna_id,
      member_id,
      title,
      response,
      created_date
    from 
      hms_qna
    order by 
      qna_id desc
  </select>

  <select id="findByNo" parameterType="int" resultMap="qnaMap">
    select 
      qna_id,
      member_id,
      title,
      response,
      created_date 
    from 
      hms_qna
    where 
      qna_id=#{no}
  </select>
  
  <update id="update" parameterType="qna">
    update hms_qna set
      title=#{title},
      response=#{response},
    where qna_id=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from hms_qna
    where qna_id=#{no}
  </delete>
</mapper>





